{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <h1>Médiathèque</h1>
    <h2>Films</h2>
    <div class="row">
        <div class="col-12">
            <form action="{{ path('search_movies') }}" method="get" class="d-flex mb-2">
                <div class="form-search">
                    <label for="name">Ajouter un film : </label>
                    <input type="text" name="search" id="search" required>
                </div>
                <div class="form-search">
                    <input type="submit" value="We go" class="ml-2">
                </div>
            </form>
            <div class="row">
                <div class="col-6 col-md-4 col-xl-3">
                    {% for movie in movies %}
                    <div class="card media-card mb-4">
                        <form method="post" action="{{ path('movies_delete', {'id': movie.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ movie.id) }}">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                        <img class="card-img-top" src="{{ movie.poster }}">
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-center">{{ movie.title }}</h5>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
                <div>
                    <p><strong>Pas de films</strong></p>
                </div>
            {% endfor %}
        </div>
    </div>

    <h2>Séries TV</h2>
    <div class="row">
        <div class="col-12">
            <form action="{{ path('search_series') }}" method="get" class="d-flex mb-2">
                <div class="form-search">
                    <label for="name">Ajouter une série : </label>
                    <input type="text" name="search" id="search" required>
                </div>
                <div class="form-search">
                    <input type="submit" value="We go" class="ml-2">
                </div>
            </form>
            <div class="row">
                <div class="col-6 col-md-4 col-xl-3">
                    {% for serie in series %}
                    <div class="card media-card mb-4">
                        <form method="post" action="{{ path('series_delete', {'id': serie.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serie.id) }}">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                        <img class="card-img-top" src="{{ serie.poster }}">
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-center">{{ serie.title }}</h5>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
                <div>
                    <p><strong>Pas de séries</strong></p>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}