{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Médiathèque</h1>
        <h2>Films</h2>
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-row">
                    {% if movies is defined %}
                        {% for movie in movies %}
                            <div class="card mr-3" style="width: 18rem;">
                                <img class="card-img-top" src="{{ movie.poster }}">
                                <div class="card-body">
                                    <h5 class="card-title d-flex justify-content-center">{{ movie.title }}</h5>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <a href="{{ path('search_movie', {search: 'fight club'}) }}">Recherche</a>
            {% if results is defined %}
                {{ dump(results) }}
            {% endif %}
        </div>
    </div>

{% endblock %}